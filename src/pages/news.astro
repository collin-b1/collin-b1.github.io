---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="news">
  <main>
    <Card title="August 4th, 2025">
      <span slot="description"
        >This site is now built using Astro which makes the code a little less
        redundant and easier to follow.</span
      >
    </Card>
  </main>
</Layout>

<style>
  /* Mobile */
  @media screen and (min-width: 480px) {
    main > .card > h2 {
      margin-right: 1rem;
    }
  }

  /* Tablet Landscape */
  @media screen and (min-width: 960px) {
    main {
      flex-direction: column;
    }

    main > .card {
      flex-direction: row;
    }
  }
</style>
